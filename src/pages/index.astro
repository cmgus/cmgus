---
import Header from '../components/Header.astro'
import Main from '../components/Main.astro'
import Footer from '../components/Footer.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/cmgus/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500&display=swap"
      rel="stylesheet"
    />
    <title>cmgus | Portfolio</title>
  </head>
  <body
    class="bg-background text-text flex flex-col min-h-screen max-w-3xl mx-auto gap-9 px-10"
  >
    <Header />
    <Main />
    <Footer />
  </body>

  <style is:global>
    * {
      transition: 350ms ease-in-out;
      font-family: 'Manrope', sans-serif;
    }

    @media only screen and (max-width: 480px) {
      * {
        font-size: 12px;
      }
    }
  </style>
</html>
